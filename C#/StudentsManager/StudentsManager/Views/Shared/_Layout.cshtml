<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark bg-dark fixed-top">
        @Html.ActionLink("Student's Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
    </nav>

    <div class="container-fluid body-content mt-3">
        @RenderBody()
        <hr />
            <p>&copy; @DateTime.Now.Year - Anubhav's ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>